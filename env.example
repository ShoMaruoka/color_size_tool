# カラーサイズメンテナンスツール 環境変数設定例

# デバッグモード
DEBUG=False

# SQL Server設定
SQLSERVER_DRIVER=ODBC Driver 17 for SQL Server
SQLSERVER_SERVER=localhost
SQLSERVER_DATABASE=your_database
SQLSERVER_TRUSTED_CONNECTION=yes
SQLSERVER_UID=
SQLSERVER_PWD=

# MariaDB設定
MARIADB_HOST=localhost
MARIADB_PORT=3306
MARIADB_USER=your_user
MARIADB_PASSWORD=your_password
MARIADB_DATABASE=your_database

# SQLite設定
SQLITE_DATABASE=data/conversion.db

# データ取得設定
DEFAULT_DATE_RANGE_DAYS=30
MAX_RECORDS_PER_PAGE=1000
BATCH_SIZE=100

# 変換処理設定
AUTO_CONVERT_ENABLED=True
BACKUP_BEFORE_CONVERT=True
VALIDATE_AFTER_CONVERT=True

# UI設定
UI_THEME=light
UI_LANGUAGE=ja
UI_PAGE_SIZE=20

# ログ設定
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
MAX_LOG_SIZE=10485760
LOG_BACKUP_COUNT=5
